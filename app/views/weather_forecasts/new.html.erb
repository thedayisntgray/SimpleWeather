<h1>Get WeatherForecast For Address</h1>

<%= form_with model: @weather_forecast do |form| %>
  <div>

    <%= form.label :street%><br>
    <%= form.text_field :street %>
    <br>

    <%= form.label :city%><br>
    <%= form.text_field :city%>

    <br>

    <%= form.label :state%><br>
    <%= form.text_field :state%>

    <br>
    <%= form.label :zip %><br>
    <%= form.text_field :zip %>
  </div>

  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>